<script>
  // Tab navigation functionality with ARIA support
  const tabButtons = document.querySelectorAll<HTMLButtonElement>('.template-nav-btn');
  const tabPanels = document.querySelectorAll('.template-tab');
  const tabList = Array.from(tabButtons);

  function activateTab(btn: HTMLButtonElement) {
    const targetTab = btn.dataset.tab;

    // Update button states and ARIA
    tabButtons.forEach(b => {
      b.classList.remove('active');
      b.setAttribute('aria-selected', 'false');
      b.setAttribute('tabindex', '-1');
    });
    btn.classList.add('active');
    btn.setAttribute('aria-selected', 'true');
    btn.removeAttribute('tabindex');

    // Update panel visibility
    tabPanels.forEach(panel => {
      panel.classList.remove('active');
      if (panel.id === `tab-${targetTab}`) {
        panel.classList.add('active');
      }
    });
  }

  tabButtons.forEach(btn => {
    btn.addEventListener('click', () => activateTab(btn));

    // Arrow key navigation between tabs
    btn.addEventListener('keydown', (e) => {
      const index = tabList.indexOf(btn);
      let newIndex: number | null = null;

      if (e.key === 'ArrowRight') {
        newIndex = (index + 1) % tabList.length;
      } else if (e.key === 'ArrowLeft') {
        newIndex = (index - 1 + tabList.length) % tabList.length;
      } else if (e.key === 'Home') {
        newIndex = 0;
      } else if (e.key === 'End') {
        newIndex = tabList.length - 1;
      }

      if (newIndex !== null) {
        e.preventDefault();
        const newTab = tabList[newIndex];
        activateTab(newTab);
        newTab.focus();
      }
    });
  });

  // Copy button functionality with live region feedback
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const card = btn.closest('.template-card');
      const pre = card?.querySelector('pre');
      if (!pre) return;

      try {
        await navigator.clipboard.writeText(pre.textContent || '');
        btn.textContent = 'Copied!';
        btn.classList.add('copied');
        btn.setAttribute('aria-live', 'polite');
        setTimeout(() => {
          btn.textContent = 'Copy';
          btn.classList.remove('copied');
          btn.removeAttribute('aria-live');
        }, 2000);
      } catch (err) {
        btn.textContent = 'Failed';
        btn.setAttribute('aria-live', 'polite');
        setTimeout(() => {
          btn.textContent = 'Copy';
          btn.removeAttribute('aria-live');
        }, 2000);
      }
    });
  });
</script>

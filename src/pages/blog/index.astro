---
import Page from '@/layouts/Page.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => data.published);
const sortedPosts = posts.sort((a, b) =>
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);
---

<Page
  title="Blog"
  label="Updates"
  description="News, announcements, and behind-the-scenes from Wingmarks."
  currentPage="blog"
>
  <section class="content-section">
    <div class="content-inner">
      {sortedPosts.length === 0 && (
        <p class="lead-text">No posts yet. Check back soon.</p>
      )}

      <div class="blog-list">
        {sortedPosts.map((post) => {
          const date = new Date(post.data.publishedAt).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          });
          return (
            <article class="blog-card">
              <time class="blog-card-date" datetime={new Date(post.data.publishedAt).toISOString().slice(0, 10)}>
                {date}
              </time>
              <h2 class="blog-card-title">
                <a href={`/blog/${post.id}`}>{post.data.title}</a>
              </h2>
              <p class="blog-card-description">{post.data.description}</p>
              <a href={`/blog/${post.id}`} class="blog-card-link">Read more</a>
            </article>
          );
        })}
      </div>
    </div>
  </section>
</Page>

<style>
  .blog-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .blog-card {
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--gray-200);
  }

  .blog-card:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .blog-card-date {
    font-family: var(--ff-ui);
    font-size: 0.85rem;
    color: var(--gray-500);
    letter-spacing: 0.05em;
  }

  .blog-card-title {
    font-family: var(--ff-display);
    font-size: 1.5rem;
    font-weight: 500;
    margin: 0.5rem 0 0.75rem;
    line-height: 1.3;
  }

  .blog-card-title a {
    color: var(--wm-ink);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .blog-card-title a:hover {
    color: var(--wm-rust);
  }

  .blog-card-description {
    font-family: var(--ff-body);
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--gray-600);
    margin-bottom: 0.75rem;
  }

  .blog-card-link {
    font-family: var(--ff-ui);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--wm-rust);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .blog-card-link:hover {
    opacity: 0.7;
  }
</style>

    line-height: 1.7;
    margin-bottom: var(--space-4);
  }

  .legal-section ul {
    color: var(--gray-700);
    line-height: 1.7;
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .legal-section li {
    margin-bottom: var(--space-2);
  }

  .legal-section a {
    color: var(--gray-900);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .legal-section a:hover {
    color: var(--gray-600);
  }

  .legal-entity {
    font-size: var(--text-sm);
    color: var(--gray-500);
    margin-top: var(--space-4);

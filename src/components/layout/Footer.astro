---
import Flourish from '@/components/ui/Flourish.astro';
import SkeletonKey from '@/components/ui/SkeletonKey.astro';

interface Props {
  currentPage?: string;
}

const { currentPage = "" } = Astro.props;

const links = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/submit", label: "Submit" },
  { href: "/blog", label: "Blog" },
  { href: "/contact", label: "Contact" }
];

const legalLinks = [
  { href: "/privacy", label: "Privacy" },
  { href: "/terms", label: "Terms" }
];
---

<footer>
  <div class="footer-top">
    <div class="footer-brand">
      <div class="footer-logo">Wingmarks</div>
      <div class="footer-tagline">The encounters that rearranged us</div>
    </div>
    <nav class="footer-links" aria-label="Footer navigation">
      {links.map(link => (
        <a
          href={link.href}
          class="footer-link"
          aria-current={currentPage === link.label.toLowerCase() ? "page" : undefined}
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
  <div class="footer-trace" aria-hidden="true">
    <Flourish variant="divider" />
  </div>
  <div class="footer-bottom">
    <SkeletonKey size="small" />
    <div class="footer-copy">&copy; 2026 Luminous Estate LLC</div>
    <nav class="footer-legal" aria-label="Legal">
      {legalLinks.map(link => (
        <a
          href={link.href}
          class="footer-legal-link"
          aria-current={currentPage === link.label.toLowerCase() ? "page" : undefined}
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</footer>
